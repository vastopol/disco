#!/bin/bash

# fake makefile

function chkdiff()
{
    for $x in $( ls tests ) ; do
        echo $x
    done
}


if [ "$1" = "clean" ] ; then
    cd tests
    rm *.asm > /dev/null 2>&1
    rm *.out > /dev/null 2>&1
    exit 0
fi

ls tests

# test converter
./conv.py 0 tests/*.bin
./conv.py 1 tests/*.bin.out
chkdiff

# test disassembler
./lc3_dis.py tests/*.bin

ls tests
